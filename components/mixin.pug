include array.pug
mixin big(classs,img,title,price,del)
    div(class= classs) NEW
    .hotproduct__grid--left--big--image
        img(src=img, alt="")
        div
        p
            a(href="#") Mua Ngay
            a(href="" class="-search fas fa-search")
    p.hotproduct__grid--left--big--title= title
        span
            i(class="fas fa-star")
            i(class="fas fa-star")
            i(class="fas fa-star")
            i(class="fas fa-star")
            i(class="fas fa-star-half-alt")
    p.hotproduct__grid--left--big--price= price
        del= del
