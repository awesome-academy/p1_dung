          block news_same
            +news__right__same('detailNews','../img/img-news-1.png','Cách bố trí hoa chậu trước cửa ấn tượng ngay lần đầu tiên')
          each p in detail_news
               p= p
          .detailNews__content--right--image
             img(src="../img/img-news-2.png", alt="")
          each item in detailNewsContentTop
             p= item
          .detailNews__content--right--comment
             h3 BÌNH LUẬN(3)
             .detailNews__content--right--comment--list
                 .detailNews__content--right--comment--list--left
                    .image
                       img(class="avata" src="../img/avatar.png", alt="")
